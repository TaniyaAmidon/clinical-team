<div>
    <br>
    <div class="d-flex justify-content-around mt-4">
        <% @teams.each do |team| %> 
            <div class="card p-4" style="width: 300px;">
                <h2><%= team.name %></h2>
                    <% team.users.each do |user|%>
                    <div class="card p-2 mb-4">
                            <img src="<%=user.photo%>" alt="" style="width:50px; height:50px; border-radius:50%;">
                            <p><%= user.firstname.capitalize %> <%= user.lastname.capitalize %></p>
                            <p><%= user.type%></p>    
                                <p><%user.specialities.each do |spec| %>
                                    <%= spec.name %>
                                <%end%></p>       
                        <%= link_to "Staff profile", user_path(user), class: "btn btn-primary" %>
                        <%= link_to "Remove", delete_team_member_path(:team_id => team.id, :user_id => user.id) , :method => :delete, class: "badge badge-danger" %>   
                    </div>
                    <%end%>
                    <%= link_to "Add staff", team_members_path(:team_id => team.id), class: "btn btn-dark" %>    
            </div>
        <%end%>
    </div>
</div>